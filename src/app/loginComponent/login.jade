.login-container
  form.form-horizontal((ngSubmit)="onLogin()")
    .form-group
      label.col-sm-2.col-sm-offset-2.col-xs-2.col-xs-offset-2.control-label(for="account") account
      .col-sm-3.col-xs-4
        input(type="text", class="form-control", id="account", placeholder="account",  [(ngModel)]="account")
    .form-group
      label.col-sm-2.col-sm-offset-2.col-xs-2.col-xs-offset-2.control-label(for="password") password
      .col-sm-3.col-xs-4
        input(type="password", class="form-control", id="password", placeholder="password", [(ngModel)]="password")
    .form-group
      .col-sm-offset-4.col-sm-3.col-xs-offset-4.col-xs-4
        .checkbox
          label
            input(type="checkbox", id="remember", value="remember",[ngModel]="remember", (click)="onClickRemember()")
            | Remember me
    .form-group  
      .col-sm-offset-4.col-sm-3.col-xs-offset-4.col-xs-4
        button(type="submit" class="btn btn-default" ) Login
    .error-message
      .col-sm-offset-4.col-sm-3.col-xs-offset-4.col-xs-4
        ul.messages-list
          li.text-warning(*ngFor="#message of messages") {{message}}
